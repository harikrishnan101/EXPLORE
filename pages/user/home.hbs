           <h3> {{userDetails.name}}</h3>
                <button class="btn btn-black " onclick="logout()"><h3>Logout</h3></button>
                
        </nav>
        <div class="container  " style="margin-top: 100px;">
            <div class="row">
                {{#each data}}
                <div class="col-md-3">
                    <h5 class="card-title text-center">{{category}}</h5>
                    <div class="card" style="width: 250px; height:auto">
                        <a href="/detailedview?id={{this._id}}">
                            <img src="/uploads/{{this.Image.[0].filename}}" class="d-block w-100 border border-black rounded-5 " style = "width:200px; Height : 300px;">

                            <div class="card-body">
                                <h5 class="card-title ">{{heading}}</h5>
                                <p class="card-text">{{content}}</p>
                                
                            </div>
                          
                        </a>
                    </div>
                </div>
               
                {{/each}}


            </div>
        </div>



        <!-- Include Bootstrap JS (optional, for certain components) -->
        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.1/dist/umd/popper.min.js"></script>
